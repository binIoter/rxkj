<resources>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

  <!-- Base application theme. -->
  <style name="AppThemeBase" parent="Theme.AppCompat.Light">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:colorBackground">@color/colorApp</item>
    <item name="android:windowBackground">@color/colorApp</item>
    <item name="android:popupAnimationStyle">@null</item>
  </style>

</resources>
